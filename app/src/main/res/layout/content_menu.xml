<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_menu" tools:context=".MenuActivity"
    style="@style/AppTheme"
    android:background="#FFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                style="@style/menuButtonCardView">
                <ImageButton
                    android:text="Tour"
                    android:src="@drawable/ic_headset_black_48dp"
                    style="@style/menuButtonImageButton"
                    android:id="@+id/tourButton"/>
                <TextView
                    android:text="Audio Tour"
                    style="@style/menuButtonTextView"
                    android:layout_alignBottom="@+id/imageButton"
                    android:layout_centerHorizontal="true" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                style="@style/menuButtonCardView"
                android:layout_marginRight="@dimen/menu_button_margin">
                <ImageButton
                    android:text="Tour"
                    android:src="@drawable/ic_map_black_48dp"
                    style="@style/menuButtonImageButton"
                    android:id="@+id/mapButton"/>
                <TextView
                    android:text="Map"
                    style="@style/menuButtonTextView"
                    android:layout_alignBottom="@+id/imageButton"
                    android:layout_centerHorizontal="true" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                style="@style/menuButtonCardView">
                <ImageButton
                    android:text="Tour"
                    android:src="@drawable/ic_photo_library_black_48dp"
                    style="@style/menuButtonImageButton" />
                <TextView
                    android:text="Gallery"
                    style="@style/menuButtonTextView"
                    android:layout_alignBottom="@+id/imageButton"
                    android:layout_centerHorizontal="true" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                style="@style/menuButtonCardView"
                android:layout_marginRight="@dimen/menu_button_margin">
                <ImageButton
                    android:text="Tour"
                    android:src="@drawable/ic_mail_black_48dp"
                    style="@style/menuButtonImageButton" />
                <TextView
                    android:text="Contact"
                    style="@style/menuButtonTextView"
                    android:layout_alignBottom="@+id/imageButton"
                    android:layout_centerHorizontal="true" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                style="@style/menuButtonCardView"
                android:layout_marginBottom="@dimen/menu_button_margin">
                <ImageButton
                    android:text="Tour"
                    android:src="@drawable/ic_info_outline_black_48dp"
                    style="@style/menuButtonImageButton" />
                <TextView
                    android:text="About"
                    style="@style/menuButtonTextView"
                    android:layout_alignBottom="@+id/imageButton"
                    android:layout_centerHorizontal="true" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                style="@style/menuButtonCardView"
                android:layout_marginRight="@dimen/menu_button_margin"
                android:layout_marginBottom="@dimen/menu_button_margin">
                <ImageButton
                    android:text="Tour"
                    android:src="@drawable/ic_settings_black_48dp"
                    style="@style/menuButtonImageButton"
                    android:id="@+id/settingsButton"/>
                <TextView
                    android:text="Settings"
                    style="@style/menuButtonTextView"
                    android:layout_alignBottom="@+id/imageButton"
                    android:layout_centerHorizontal="true" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>




</RelativeLayout>
